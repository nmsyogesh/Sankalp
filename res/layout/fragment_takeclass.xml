<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/buttonClassFunction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:background="@drawable/rectangle"
			android:gravity="center_horizontal"
			android:layout_margin="15dp"
			android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/centreOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonClassFunction"
			android:layout_margin="15dp"
			android:padding="15dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:text="Select Centre" />
        
        <EditText
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/centreOption"
			android:layout_margin="5dp"
			android:padding="15dp"
            android:hint="Have any issues in the class??"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnCapturePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comments"
            android:gravity="center_horizontal"
			android:layout_margin="15dp"
			android:padding="15dp"
            android:background="@drawable/rectangle"
            android:text="Attach a Picture with class (Optional)" />

        <GridView
            android:id="@+id/previewPane"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/btnCapturePicture"
            android:background="@drawable/rectangle"
            android:columnWidth="90dp"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp" >
        </GridView>
    </RelativeLayout>

</ScrollView>